<mtapp:setting
  id='tw_intro'
  label='<__trans phrase='Introduction'>'
  hint='<__trans phrase='Hint'>'
  >
    <input type="text" name="tw_intro" name="tw_intro" value="<mt:var name="tw_intro" escape="html">" />
    <p><__trans phrase='Precedes the post title and url.'></p>
</mtapp:setting>
<mtapp:setting
  id='tw_community'
  label='<__trans phrase='Hash Tag'>'
  hint='<__trans phrase='Hint'>'
  >
    <input type="text" name="tw_community" name="tw_community" value="<mt:var name="tw_community" escape="html">" />
    <p><__trans phrase='Default hashtag'></p>
</mtapp:setting>
<mtapp:setting
  id='tw_share'
  label='<__trans phrase='By default'>'
  hint='<__trans phrase='Hint'>'
  >
    <input type="radio" name="tw_share" id="tw_share" value="0"<mt:if name="tw_share" eq="0"> checked="checked"</mt:if> />
        &nbsp;<__trans phrase="Don't Tweet"><br />
    <input type="radio" name="tw_share" id="tw_share" value="1"<mt:if name="tw_share" eq="1"> checked="checked"</mt:if> />
        &nbsp;<__trans phrase='Tweet without HashTags'><br />
    <input type="radio" name="tw_share" id="tw_share" value="2"<mt:if name="tw_share" eq="2"> checked="checked"</mt:if> />
        &nbsp;<__trans phrase='Use default HashTag'><br />
    <input type="radio" name="tw_share" id="tw_share" value="3"<mt:if name="tw_share" eq="3"> checked="checked"</mt:if> />
        &nbsp;<__trans phrase='Use entry tags as HashTags'>
</mtapp:setting>
<mtapp:setting
    id="use_bitly"
    label="<__trans phrase="URL Shortener:">">
    <input type="radio" name="use_bitly" id="use_bitly" value="1"<mt:if name="use_bitly"> checked="checked"</mt:if> />
    <label>&nbsp;<__trans phrase='bit.ly'>&nbsp;</label>
    <input type="radio" name="use_bitly" id="use_bitly" value="0"<mt:unless name="use_bitly"> checked="checked"</mt:unless> />
    <label>&nbsp;<__trans phrase='TinyURL'>&nbsp;</label>
</mtapp:setting>
